#!/bin/bash

set -ex

source config/.helpers-rc

test/clean-test-files

mkdir -p tmp tmp1 tmp2

check_link() {
  link="$1"
  expected="$2"

  [ -L "$link" ] || err "$link not a link"

  actual="$(readlink "$link")"

  [ "$expected" == "$actual" ] || err "Expected link $link to point to $expected; actually $actual"
}
