#!/bin/bash

# Git aliases. source me from .bashrc!

dir="$(dirname "${BASH_SOURCE[0]}")"

try_source() {
  for arg in "$@"; do
    if [ -f "$arg" ]; then
      source "$arg"
    fi
  done
}
try_source "$dir/.gitcomplete" "$dir/.git-completion.bash"

export PATH="$PATH:$dir:$dir/aliases"
export PYTHONPATH="$PYTHONPATH:$dir:$dir/util"

alias gcd="g cd"
alias gf="git fetch"
alias gfo="git fetch origin"

alias gbd="git branch -d"
alias gbD="git branch -D"
alias gbdf="git branch -D"
alias gd="git diff"
alias gdc="gd --cached"
alias gln="git lg"
alias gs="git status"
alias gb="g b"
alias gbu="g bu"
alias gbr="g br"
alias gh="g h"
alias grb="g rb"
alias gl="git lg"
alias gls="git ls-files"
alias gac="g ac '%h'"
alias gng="git --no-pager grep"
alias gg="git grep"

alias gc="git commit"
alias gcm="git commit -m"
alias gca="git commit -a"
alias gcam="git commit -a -m"

alias garc='git arc'
alias gaurc='git aurc'
alias guu='git conflicting'

alias grt=". ~/s/git-root"
alias gr="git remote -vv"
alias gsh="gn sh"  # git-show-short
alias rmu="git ls-files --other --exclude-standard | xargs rm -f"
alias snippets='git log --since "8days" --oneline --author $USER'

alias gss="git stash save"
alias gsa="git stash apply"
alias gsp="git stash pop"
alias gsl="gn sl"
alias gss="g ss"

