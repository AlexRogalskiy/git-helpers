git-add-global-file() {
    config="$1"
    shift
    for file in "$@"; do
	if [ -s "$file" ] && ! git config --global --get-all "$config" | grep "$file" >/dev/null; then
	    git config --global --add "$config" "$file"
	fi
    done
}

git_add_global_config_file() {
    git-add-global-file "include.path" "$@"
}
export -f git_add_global_config_file

git_add_global_ignore_file() {
    git-add-global-file "core.excludesfile" "$@"
}
export -f git_add_global_ignore_file
